	<ContentPage.Content>
		<StackLayout Padding="25">
			<Entry Placeholder="cateto 1" x:Name="Cateto1Holder" Keyboard="Numeric"/>
			<Entry Placeholder="cateto 2" x:Name="Cateto2Holder" Keyboard="Numeric"/>
			<Entry Placeholder="hipotenusa" x:Name="HipotenusaHolder" Keyboard="Numeric"/>
			<Button Text="Calcular" Clicked="Descobrir" />
